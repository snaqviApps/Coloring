<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="ghar.dfw.coloringschools.view.adapter.SchoolsMainAdapter.SchoolsBasicInfoListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/material_dynamic_neutral_variant90"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mTextViewSchoolName"
                    android:layout_width="231dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:padding="8dp"
                    android:text="@string/some_text"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/buToDetails"
                    app:layout_constraintHorizontal_bias="0.48"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/buToDetails"
                    android:layout_width="94dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:onClick="@{()-> clickListener.onClick(mTextViewSchoolName)}"
                    android:text="@string/show_details"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/mTextViewSchoolName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.94"
                    app:layout_constraintStart_toEndOf="@+id/mTextViewSchoolName"
                    app:layout_constraintTop_toTopOf="@+id/mTextViewSchoolName"
                    app:layout_constraintVertical_bias="0.666" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>